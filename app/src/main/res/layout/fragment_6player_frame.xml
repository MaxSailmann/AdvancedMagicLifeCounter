<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_6player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/fl_6player_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <include layout="@layout/fragment_6player_input" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_6player_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <include layout="@layout/fragment_6player_input" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_6player_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <include layout="@layout/fragment_6player_input" />


        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <FrameLayout
            android:id="@+id/fl_6player_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <include layout="@layout/fragment_6player_input" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_6player_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <include layout="@layout/fragment_6player_input" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_6player_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <include layout="@layout/fragment_6player_input" />


        </FrameLayout>


    </LinearLayout>


</LinearLayout>