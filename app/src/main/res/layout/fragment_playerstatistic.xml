<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/activity_vertical_margin_small"
    android:paddingBottom="@dimen/activity_vertical_margin_small">


    <ImageView
        android:id="@+id/iv_fplayerstatistic_6"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/iv_fplayerstatistic_5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_fplayerstatistic_6" />


    <ImageView
        android:id="@+id/iv_fplayerstatistic_4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_fplayerstatistic_5" />

    <ImageView
        android:id="@+id/iv_fplayerstatistic_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_fplayerstatistic_4" />

    <ImageView
        android:id="@+id/iv_fplayerstatistic_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_fplayerstatistic_3"/>

    <ImageView
        android:id="@+id/iv_fplayerstatistic_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_fplayerstatistic_2" />

    <TextView
        android:id="@+id/tv_fplayerstatistic_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_fplayerstatistic_1"
        android:maxLength="7"
        android:maxLines="1"
        android:text="@string/name" />



</RelativeLayout>
