<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">


    <ToggleButton
        android:id="@+id/tb_fplayer_green"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/toggle_green"
        android:paddingLeft="@dimen/activity_horizontal_margin_small"
        android:paddingRight="@dimen/activity_horizontal_margin_small"
        android:textColor="@color/green"
        android:textOff="G"
        android:textOn="" />


    <ToggleButton
        android:id="@+id/tb_fplayer_red"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tb_fplayer_green"
        android:background="@drawable/toggle_red"
        android:paddingLeft="@dimen/activity_horizontal_margin_small"
        android:paddingRight="@dimen/activity_horizontal_margin_small"
        android:textColor="@color/red"
        android:textOff="R"
        android:textOn="" />


    <ToggleButton
        android:id="@+id/tb_fplayer_black"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tb_fplayer_red"
        android:background="@drawable/toggle_black"
        android:paddingLeft="@dimen/activity_horizontal_margin_small"
        android:paddingRight="@dimen/activity_horizontal_margin_small"
        android:textColor="@color/black"
        android:textOff="B"
        android:textOn="" />


    <ToggleButton
        android:id="@+id/tb_fplayer_blue"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tb_fplayer_black"
        android:background="@drawable/toggle_blue"
        android:paddingLeft="@dimen/activity_horizontal_margin_small"
        android:paddingRight="@dimen/activity_horizontal_margin_small"
        android:textColor="@color/blue"
        android:textOff="U"
        android:textOn="" />


    <ToggleButton
        android:id="@+id/tb_fplayer_white"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tb_fplayer_blue"
        android:background="@drawable/toggle_white"
        android:paddingLeft="@dimen/activity_horizontal_margin_small"
        android:paddingRight="@dimen/activity_horizontal_margin_small"
        android:textColor="@color/silver"
        android:textOff="W"
        android:textOn="" />


    <ToggleButton
        android:id="@+id/tb_fplayer_colorless"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tb_fplayer_white"
        android:background="@drawable/toggle_colorless"
        android:paddingLeft="@dimen/activity_horizontal_margin_small"
        android:paddingRight="@dimen/activity_horizontal_margin_small"
        android:textColor="@color/gray"
        android:textOff="C"
        android:textOn="" />

    <EditText
        android:id="@+id/et_fplayer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tb_fplayer_colorless"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:maxLength="7"
        android:selectAllOnFocus="true"
        android:text="@string/name" />


</RelativeLayout>
